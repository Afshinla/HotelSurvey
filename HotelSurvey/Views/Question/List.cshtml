@using HotelSurvey.Models
@model IEnumerable<Question>
@*@model IEnumerable<QuestionViewModel>*@
<a class="btn btn-primary mt-5" style="margin: 10px" asp-controller="Question" asp-action="Create">Create new question</a>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            @*<th>SurveyTaker survey count</th>*@
            <th>Edit question</th>
            <th>Delete question</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var questionVM in Model)
        {
        <tr>
            <td>@questionVM.QuestionId</td>
            <td>@questionVM.Name</td>
            @*<td>@questionVM.Surveys</td>*@
            <td><a class="btn btn-info" asp-area="" asp-controller="Question" asp-action="Update" asp-route-id="@questionVM.QuestionId">Edit</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Question" asp-action="Delete" asp-route-id="@questionVM.QuestionId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

