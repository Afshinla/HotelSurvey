@using HotelSurvey.Models
@model IEnumerable<Result>
@{
    ViewData["Title"] = "ListResponses";
}

<h2>Thanks for your respons</h2>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <body>
        <h2>Here is the list of your responses</h2>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>ResultId</th>
                    <th>ResultText</th>
                    <th>ResultNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HotelSurvey.Models.Result r in Model)
                {
                <tr>
                    @*<td>@resultVM.ResultId</td>
                    <td>@resultVM.ResultText</td>
                    <td>@resultVM.ResultNummer</td>*@
                    <td>@r.ResultId</td>
                    <td>@r.ResultText</td>
                    <td>@r.ResultNummer</td>

                </tr>

                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-area="" asp-controller="Result" asp-action="ListResponses" asp-route-id="">Send</a>
    </body>
    
</head>
</html>

