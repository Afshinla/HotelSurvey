@using HotelSurvey.Models
@model Result
<div class="row orderForm">
    <form asp-controller="Result" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Edit result @Model.ResultText</h3>
        @Html.HiddenFor(m => Model.ResultId)
        <div class="form-group">
            <label asp-for="ResultText" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ResultText" class="form-control" />
                <span asp-validation-for="ResultText" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ResultNummer" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ResultNummer" class="form-control" placeholder="Enter customers name" />
                <span asp-validation-for="ResultNummer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Result" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>